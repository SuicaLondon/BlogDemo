<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= article.title %> " name="title", id="title" required>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" name="description", id="description"><%= article.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea type="text" name="markdown" id="markdown" required><%= article.markdown %></textarea>
</div>

<a href="/">Cancel</a>
<button type="submit">Save</button>